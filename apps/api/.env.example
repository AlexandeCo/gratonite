# ──────────────────────────────────────────────────────────────────────────
# Gratonite API — Environment Variables
# Copy to .env and fill in values
# ──────────────────────────────────────────────────────────────────────────

# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=postgres://gratonite:gratonite@localhost:5433/gratonite

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=gratonite
MINIO_SECRET_KEY=gratonite123
MINIO_USE_SSL=false

# JWT
JWT_SECRET=change-me-to-a-random-64-char-string-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption (for DOB, connected account tokens)
ENCRYPTION_KEY=change-me-to-a-32-byte-hex-string-in-production

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback

# CORS
CORS_ORIGIN=http://localhost:5173

# CDN (for avatar/banner URLs)
CDN_BASE_URL=http://localhost:9000
